<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatGPT Chatbot</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ChatWithDocuments.styles.css" asp-append-version="true" />
    
     <link rel="icon" href="~/eyaay.ico" type="image/x-icon">
    <style>
       
    </style>
</head>
<body class="green">
    <div class="loading-overlay d-none">
        <div class="loading-spinner"></div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar for conversation list -->
            <div class="col-md-4 col-lg-3 p-0  sidebar">
                <div class="sidebar-header text-center py-2">
                    <div id="uploded-area"class="sider-upload" style="height: 64px;margin: 8px;;flex-shrink: 0;">
                        <span class="upload-bg">
                            <div class="css-18gdw5k ant-upload ant-upload-drag" style="padding: 0px;">
                                <span  class="upload-btn" role="button">
                                    <input type="file"  id="file-uploader" accept=".pdf" style="display: none;">
                                    <div class="upload-drag-container">
                                        <div style="color: rgb(255, 255, 255);">
                                        <span role="img" aria-label="plus" class="upload-plus">
                                            <svg viewBox="64 64 896 896" focusable="false" data-icon="plus" width="1em" height="1em" fill="currentColor" aria-hidden="true">
                                                <path d="M482 152h60q8 0 8 8v704q0 8-8 8h-60q-8 0-8-8V160q0-8 8-8z"></path>
                                                <path d="M192 474h672q8 0 8 8v60q0 8-8 8H160q-8 0-8-8v-60q0-8 8-8z"></path>
                                            </svg>
                                        </span> 
                                            Yeni Doküman
                                        </div>
                                        <div class="desktop-only" style="color: rgba(255, 255, 255, 0.55);">Seçmek için tıkla</div>
                                    </div>
                                    </span>
                            </div>
                        </span>
                    </div>
                </div>
                <div class="conversation-list p-3"> 
                  
                </div>
            </div>
            <!-- Main content for chat history and input -->
            <div class="col-md-8 col-lg-9 p-0">
                @RenderBody()
            </div>
        </div>
    </div>
 
    <div class="modal fade" id="message-modal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="modal-body-message" class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
